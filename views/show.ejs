<% layout('../layouts/boilerplate') %>
    <div class="mt-3">
        <div class="container-md">
            <div class="row">
                <div class="col-6">
                    <div class="card">
                        <img src="https://images.unsplash.com/photo-1500989145603-8e7ef71d639e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8M3x8c3R1ZHlpbmd8ZW58MHx8MHx8&auto=format&fit=crop&w=500&q=60"
                            class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title ps-3">
                                <%=group.title %>
                                    <span class="fs-6 badge text-wrap bg-primary">
                                        <% if(group.online==='y' ) { %>
                                            online
                                            <% } %>
                                    </span>
                            </h5>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <%=group.subject %>
                                </li>
                                <li class="list-group-item">
                                    <%=group.location %>
                                </li>
                                <li class="list-group-item">
                                    <%=group.times %> / week
                                </li>
                            </ul>
                            <p class="card-text ps-2">
                                <%=group.description %>
                            </p>
                        </div>

                        <div class="card-body text-center">
                            <a href="#" class="card-link">View members</a>
                            <a href="#" class="card-link">Join</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>